<!DOCTYPE html>
<html>
  <head>
    <meta charser="UTF-8">
    <meta name="description" content="枚方市の公園の情報が見れます。">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    %# iosでネイティブアプリっぽく見せる
    <meta name="apple-mobile-web-app-capable" content="yes">
    <link rel="stylesheet" href="<%= url_for '/css/materialize.min.css' %>">
    <link rel="stylesheet" href="<%= url_for '/css/icons.css' %>">
    %= asset 'base.css';
    %# レイアウトを使用するテンプレート側で指定したscssファイルを読み込む
    % for (@$SCSS_FILES) {
      %= asset $_;
    % }
    % for (@$CSS_FILES) {
      %= stylesheet url_for "/$_";
    % }
    <script src="<%= url_for '/js/vue.js' %>"></script>
    <script src="<%= url_for '/js/hirakata-papark.js' %>"></script>
    <title><%= $config->{site}{name} %></title>
  </head>
  <body>
    % content container => begin
      <%= content %>
    % end
    %= content 'container'

    % for (@$JS_FILES) {
      %= javascript url_for "/$_";
    % }

    <script>
      (function (i,s,o,g,r,a,m) {
        i['GoogleAnalyticsObject'] = r;
        i[r] = i[r] || function () {
          (i[r].q = i[r].q || []).push(arguments)
        };
        i[r].l = 1 * new Date();
        a = s.createElement(o);
        m = s.getElementsByTagName(o)[0];
        a.async = 1;
        a.src = g;
        m.parentNode.insertBefore(a, m)
      })(
        window,
        document,
        'script',
        'https://www.google-analytics.com/analytics.js',
        'ga'
      );

      ga('create', 'UA-100002220-1', 'auto');
      ga('send', 'pageview');
    </script>
  </body>
</html>
